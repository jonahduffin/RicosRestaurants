@{
}
@model RicosRestaurants.Models.RestaurantSubmission
    <div class="text-center">
        <form asp-action="Submit" method="post">
            <div>
                <label asp-for="submitterName">Your Name:</label>
                <input asp-for="submitterName" />
            </div>
            <div>
                <label asp-for="restaurantName">Restaurant Name:</label>
                <input asp-for="restaurantName" />
            </div>
            <div>
                <label asp-for="favoriteDish">Favorite Dish:</label>
                <input asp-for="favoriteDish" />
            </div>
            <div>
                <label asp-for="restaurantPhone">Restaurant Phone #:</label>
                <input asp-for="restaurantPhone" />
            </div>

            <button type="submit" id="submitButton" class="btn btn-dark">Submit Your Restaurant Suggestion</button>
            <div asp-validation-summary="All" style="color:red;"></div>
        </form>
    </div>