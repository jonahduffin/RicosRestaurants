<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Rico's Tasty Restaurants</title>
        <meta name="viewport" content="width=device-width" />
        <link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
    </head>
    <body>
        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <ul class="navbar-nav">
                <li class="nav-item text-white">
                    <a class="navbar-brand" asp-action="Index">Rico's Tasty Restaurants</a>
                </li>
                <li class="nav-item text-white">
                    <a class="nav-link" asp-action="Index">Home</a>
                </li>
                <li class="nav-item text-white">
                    <a class="nav-link" asp-action="Submit">Submit a Suggestion</a>
                </li>
                <li class="nav-item text-white">
                    <a class="nav-link" asp-action="ViewSubmissions">View Submissions</a>
                </li>
            </ul>
        </nav>
        <div class="text-center">
            <h1>@ViewBag.Title</h1>
        </div>

        @RenderBody()
        <div class="text-center">
            Rico's Tasty Restaurants- 2021
        </div>

    </body>
</html>
